@model Lms.Core.Entities.Course

<div class="card" >
    <div class="card-header tbr fwcolor">
        <h1>Documents Information</h1>
    </div>
     <table class="table tbl">
    <thead>
        <tr class="tbr fwcolor">
            <th class="t1 fwcolor">@Html.DisplayNameFor(model => model.Documents.First().Name)</th>
            <th class="t1 fwcolor">@Html.DisplayNameFor(model => model.Documents.First().UploadDate)</th>
            <th class="t1 fwcolor">@Html.DisplayNameFor(model => model.Documents.First().ContentType)</th>
            @*<th class="t1 fwcolor">Actions</th>*@
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Documents) {
