@{
    Layout = "/Views/Shared/_AdminLayout.cshtml";
}
@model IEnumerable<Lms.Core.ViewModels.Activities.ActivityViewModel>

@{
    ViewData["Title"] = "Index";
}



<div class="alluvem">

    <div class="headBar">
        <h2>LMS Administration Activities</h2>
        <a asp-controller="Courses" asp-action="Create">Create New Course</a>
        <a asp-controller="Courses">Course</a>
        <a asp-controller="Modules">Modules</a>
        <a class="active" asp-controller="Activities">Activities</a>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ModuleName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ActivityTypeName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.StartDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EndDate)
                </th>
                <th>
                    Expand
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="courseBody">
                    <td>
                        @Html.DisplayFor(modelItem => item.ModuleName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ActivityTypeName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StartDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EndDate)
                    </td>
                    <td class="expandState">+</td>
                </tr>
                <tr class="expandCard hidden">
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td></td>
                    <td></td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                    <td>
                    </td>
                    <td>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>