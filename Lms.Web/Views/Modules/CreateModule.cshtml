@model Lms.Core.ViewModels.CreateModuleModel
@{
    Layout = "_Layout.cshtml";
}
<br /><br /><br />



<div class="row">
    <div class="col-sm-6">
<div class="CreateContainer">
    <h1 class="fwcolor">Create Module</h1>
        <form asp-action="CreateModule">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <br />
            <div class="form-group">
                <div class="input-group">
                <label asp-for="CourseId" class="control-label Labelcol"></label> &nbsp;&nbsp;&nbsp;
                <div class="input-group-append">
                <input asp-for="CourseId" class="form-control txt " type="text" value=@TempData["courseid"] />
                </div>
                <span asp-validation-for="CourseId" class="text-danger"></span>
                </div>
            </div>
            <br /><br />
           <div class="form-group">
                <div class="input-group">
                <label asp-for="Name" class="control-label Labelcol"></label> &nbsp;&nbsp;&nbsp;
                <div class="input-group-append">
                <input asp-for="Name" class="form-control txt " />
                </div>
                <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <br /><br />
           <div class="form-group">
                <div class="input-group">
                <label asp-for="Description" class="control-label Labelcol"></label> &nbsp;&nbsp;&nbsp;
                <div class="input-group-append">
                <input asp-for="Description" class="form-control txt " />
                </div>
                <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
            <br /><br />
            <div class="form-group">
                <div class="input-group">
                <label asp-for="StartDate" class="control-label Labelcol"></label> &nbsp;&nbsp;&nbsp;
                <div class="input-group-append">
                <input asp-for="StartDate" class="form-control txt " />
                </div>
                <span asp-validation-for="StartDate" class="text-danger"></span>
                </div>
            </div>
            <br /><br />
            <div class="form-group">
                <div class="input-group">
                <label asp-for="EndDate" class="control-label Labelcol"></label> &nbsp;&nbsp;&nbsp;
                <div class="input-group-append">
                <input asp-for="EndDate" class="form-control txt " />
                </div>
                <span asp-validation-for="EndDate" class="text-danger"></span>
                </div>
            </div>

           <br /><br />
            <div class="form-group text-align">
                <a asp-controller="Courses" asp-action="Add_Course_Module_Activity" class="btn btn-danger" > Cancel </a>
                <a id="moduletimeline" class="btn bbcolor fwcolor" > Show Timeline </a>   
                <input type="submit" value="CreateModule" class="btn bbcolor fwcolor" />
                <br />
            </div>
        </form>
</div>
</div>
<div class="col-sm-6" >
<div >
<partial name="CalenderTimeLine"  />
</div>
</div>
</div>



