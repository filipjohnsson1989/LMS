@using Lms.Core.ViewModels.Modules
@{
    Layout = "/Views/Shared/_AdminLayout.cshtml";
}
@model IndexModuleViewModel

@{
    ViewData["Title"] = "Index";
    var modules = Model.Modules;
}


@if (Model.CourseId is not null)
{
    <h1>@Html.DisplayFor(model => Model.CourseName)</h1>
}

<p>
    <a asp asp-controller="Activities">Activities</a>
</p>
 <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.StartDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EndDate)
                </th>
                <th>Expand</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="courseBody">
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StartDate)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.EndDate)
                    </td>
                    <td class="expandState">+</td>
                </tr>
                <tr class="expandCard hidden">
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                    <td>
                        <a asp-controller="Modules" asp-action="Create" asp-route-courseId="@item.Id">Create Module</a>
                    </td>
                    <td></td>
                </tr>
                
            }
        </tbody>
    </table>
