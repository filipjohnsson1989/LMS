@{
    Layout = "/Views/Shared/_MasterLayout.cshtml"; 
}

<p>>_Layout</p>
<Sidebar>
    <div>
    @if (User.Identity.IsAuthenticated)
    {
       <h2>Modules from _Layout.cshtml</h2>
       
        var userId = userManager.GetUserId(User);

        @await Component.InvokeAsync("ModulesVC", new {userId})
    }
    else
    {
        <p>You must be signed in to view this content.</p>
    }
</Sidebar>

<div class="col-md-9">
    <h2>Activities from _Laytout.cshtml</h2>
    @RenderBody()
</div>

